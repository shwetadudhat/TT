<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:height="@dimen/dimen_40dp"
                        android:width="200dp"/>
                    <solid android:color="@color/light_gray"/>
                    <corners android:radius="@dimen/dimen_10dp"/>
                    <stroke android:color="@color/content_dark_gray_color"
                        android:width="@dimen/dp_1"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_goods_text_dark_gray"
                android:gravity="right|center"
                android:right="@dimen/dimen_20dp"
                />
        </layer-list>

    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:height="@dimen/dimen_40dp"
                        android:width="200dp"/>
                    <solid android:color="@color/light_gray"/>
                    <corners android:radius="@dimen/dimen_10dp"/>
                    <stroke android:color="@color/content_dark_gray_color"
                        android:width="@dimen/dp_1"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_passanger_text_dark_gray"
                android:gravity="left|center"
                android:left="@dimen/dimen_20dp"
                />
        </layer-list>
    </item>

</selector>