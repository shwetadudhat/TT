<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".common.account.GivePermission">

    <TextView
        style="@style/heading_text_name1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/permission_giving_msg"
        android:layout_marginBottom="@dimen/dimen_20dp"/>

    <Button
        style="@style/form_submit_button"
        android:id="@+id/permission_give_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Permission"/>

</LinearLayout>