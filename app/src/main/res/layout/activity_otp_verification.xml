<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/top_padding_top"
    android:paddingBottom="@dimen/top_padding_bottom"
    android:paddingLeft="@dimen/top_padding_left"
    android:paddingRight="@dimen/top_padding_right"
    tools:context=".common.account.LoginActivity">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:theme="@style/app_text_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.google.android.material.textview.MaterialTextView>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvAppName"
        tools:layout_editor_absoluteX="10dp">

        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_name1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/otp_confirm_header">

        </com.google.android.material.textview.MaterialTextView>


        <com.google.android.material.textview.MaterialTextView
            style="@style/content_large_text_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/otp_confirm_message_top">

        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            style="@style/sub_heading_text_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+91785755444">

        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            style="@style/content_large_text_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/otp_input_message_top">

        </com.google.android.material.textview.MaterialTextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp_edit_text_1"
                style="@style/otp_edit_text">

            </com.google.android.material.textfield.TextInputEditText>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp_edit_text_2"
                style="@style/otp_edit_text">
            </com.google.android.material.textfield.TextInputEditText>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp_edit_text_3"
                style="@style/otp_edit_text">
            </com.google.android.material.textfield.TextInputEditText>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp_edit_text_4"
                style="@style/otp_edit_text">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>

        <TextView
            style="@style/content_large_text_black"
            android:id="@+id/resend_otp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:text="Resend OTP"
            android:textColor="@color/link_color">

        </TextView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoginVerify"
        style="@style/button_theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="bottom"
        android:text="@string/btn_otp_verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.material.button.MaterialButton>
</androidx.constraintlayout.widget.ConstraintLayout>