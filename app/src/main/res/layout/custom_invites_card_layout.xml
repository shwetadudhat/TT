<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:layout_width="@dimen/small_image_view_size"
        android:layout_height="@dimen/small_image_view_size"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_marginRight="@dimen/dimen_20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp">

        <TextView
            style="@style/medium_heading_without_margin"
            android:id="@+id/invites_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suresh patel"
            android:textColor="@color/heading_color"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            style="@style/content_text_dark_gray1"
            android:id="@+id/invites_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$200 voucher earned"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>