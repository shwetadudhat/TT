<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/msg_time_text_style"
        android:id="@+id/support_tv_msg_receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:23 PM"
        android:layout_gravity="left"/>

    <TextView
        style="@style/msg_text_style"
        android:id="@+id/support_tv_msg_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="75dp"
        android:background="@drawable/support_massage_recieved"
        android:text="hi how are oou"
        android:layout_gravity="left"
        android:padding="@dimen/dimen_10dp"/>

</LinearLayout>