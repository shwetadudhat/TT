            <Switch
                android:id="@+id/drDsb_vehicleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFFLINE"
                android:theme="@style/switchButtonTheme"
                android:textAppearance="@style/switch_text_appearance_context_bold"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/content_text_dark_gray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DH25BR1234"/>
            <TextView
                style="@style/content_text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:text="Booking Ends in 48 min"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/content_text_gray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_10dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:text="4"/>
            <TextView
                style="@style/content_text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:text="Rs 25 / km"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

