                        style="@style/content_text_gray"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:drawableLeft="@drawable/ic_baseline_star_24"
                        android:text="3.5 / 5"/>
                </LinearLayout>

            </LinearLayout>

