<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="left"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            >
<!--            android:layout_weight="0.044"-->

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/stops_icon_image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLocationPosition"
                style="@style/small_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="0.956">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/search_edit_text"
                    android:id="@+id/tvAdLocationName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/search_edit_text"
                    android:id="@+id/tvAdLocationTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    />
<!--            android:layout_weight="0.25"-->

                <com.google.android.material.textview.MaterialTextView
                    style="@style/search_edit_text"
                    android:id="@+id/tvAdLocationDistance"
                    android:layout_width="wrap_content"
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/distance_mt_minimum_width"
                    />
<!--            android:layout_weight="0.25"-->

            <ImageView
                android:id="@+id/stopAddReceiverDetailIcon"
                style="@style/addReceiverDetailsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>