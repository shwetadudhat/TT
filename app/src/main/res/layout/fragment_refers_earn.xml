<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".RefersEarnFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0">
            <ImageView
                android:id="@+id/referAndEarn_BackBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/quantum_ic_arrow_back_grey600_24"
                android:layout_weight="0.1">
            </ImageView>
            <com.google.android.material.textview.MaterialTextView
                style="@style/inner_heading_text_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/refer_and_earn"
                android:layout_weight="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/content_text_dark_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_invites"
                android:textColor="@color/heading_color"
                android:layout_margin="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dimen_10dp"
                android:layout_margin="@dimen/dimen_20dp"
                app:cardCornerRadius="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/dimen_20dp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/content_text_dark_Primary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$123"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/colorPrimary"/>

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/content_text_dark_gray1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/earned"/>

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/top_margin_top"
                            android:background="@color/light_gray">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/dimen_20dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0"
                                android:fontFamily="@font/roboto_medium"
                                style="@style/content_text_dark_Primary"
                                android:textColor="@color/colorPrimary"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/content_text_dark_gray1"
                                android:text="@string/pending"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/top_margin_top"
                        android:background="@color/light_gray">
                    </View>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/RAE_sea_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/seeall"
                        android:textColor="@color/heading_color"
                        style="@style/content_text_dark_gray1"
                        android:fontFamily="@font/roboto_regular"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:layout_marginTop="@dimen/top_margin_left"
                        android:layout_marginBottom="@dimen/top_margin_left"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:padding="@dimen/dimen_10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_10dp"
                app:cardBackgroundColor="#D8D8D8"
                android:layout_marginBottom="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:paddingLeft="@dimen/dimen_20dp"
                    android:paddingRight="@dimen/dimen_20dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/content_text_dark_gray1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/your_referal_code"/>

                    <TextView
                        style="@style/content_text_dark_gray1"
                        android:id="@+id/referAndEarn_tvCode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="KFH78E"
                        android:gravity="right"
                        android:textColor="@color/heading_color"
                        android:fontFamily="@font/roboto_medium"
                        android:drawablePadding="@dimen/dimen_10dp"
                        />

                    <ImageView
                        android:id="@+id/referAndEarn_codeCopyBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:src="@drawable/ic_baseline_content_copy_24"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/shareCode_Btn"
                style="@style/medium_button_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/share_code"/>

        </LinearLayout>

    </LinearLayout>




</FrameLayout>